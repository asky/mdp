source post_core_0
{
  type = mysql
  sql_host = localhost
  sql_user = root
  sql_pass = database2002
  sql_db = matji_v2
  sql_sock = /var/run/mysqld/mysqld.sock
  sql_query_pre = SET NAMES utf8
  sql_query_pre = SET TIME_ZONE = '+0:00'
  sql_query_pre = REPLACE INTO sph_post_counter SELECT 1, MAX(id) FROM posts
  sql_query = SELECT SQL_NO_CACHE `posts`.`id` * 2 + 0 AS `id` , `posts`.`post` AS `post`, `users`.`userid` AS `userid`, `users`.`nick` AS `user_nick`, GROUP_CONCAT(DISTINCT IFNULL(`tags`.`tag`, '0') SEPARATOR ' ') AS `tag_name`, `stores`.`name` AS `store_name`, `posts`.`id` AS `sphinx_internal_id`, 4206412723 AS `class_crc`, 0 AS `sphinx_deleted`, `posts`.`sequence` AS `sequence` FROM `posts` LEFT OUTER JOIN `users` ON `users`.`id` = `posts`.`user_id` LEFT OUTER JOIN `post_tags` ON `posts`.`id` = `post_tags`.`post_id` LEFT OUTER JOIN `tags` ON `tags`.`id` = `post_tags`.`tag_id` LEFT OUTER JOIN `stores` ON `stores`.`id` = `posts`.`store_id` WHERE (`posts`.`id` >= $start AND `posts`.`id` <= $end AND activity_id IS NULL AND `posts`.`id` <= (SELECT max_id FROM sph_post_counter WHERE id = 1)) GROUP BY `posts`.`id` ORDER BY NULL
  sql_query_range = SELECT IFNULL(MIN(`id`), 1), IFNULL(MAX(`id`), 1) FROM `posts` 
  sql_attr_uint = sphinx_internal_id
  sql_attr_uint = class_crc
  sql_attr_uint = sphinx_deleted
  sql_attr_uint = sequence
  sql_query_info = SELECT * FROM `posts` WHERE `id` = (($id - 0) / 2)
}


source store_core_0
{
  type = mysql
  sql_host = localhost
  sql_user = root
  sql_pass = database2002
  sql_db = matji_v2
  sql_sock = /var/run/mysqld/mysqld.sock
  sql_query_pre = SET NAMES utf8
  sql_query_pre = SET TIME_ZONE = '+0:00'
  sql_query_pre = REPLACE INTO sph_store_counter SELECT 1, MAX(id) FROM stores
  sql_query = SELECT SQL_NO_CACHE `stores`.`id` * 2 + 1 AS `id` , `stores`.`name` AS `name`, `stores`.`address` AS `address`, GROUP_CONCAT(DISTINCT IFNULL(`tags`.`tag`, '0') SEPARATOR ' ') AS `tag_name`, GROUP_CONCAT(DISTINCT IFNULL(`foods`.`name`, '0') SEPARATOR ' ') AS `food_name`, `stores`.`id` AS `sphinx_internal_id`, 1050048371 AS `class_crc`, 0 AS `sphinx_deleted`, `stores`.`like_count` AS `like_count`, `stores`.`sequence` AS `sequence` FROM `stores` LEFT OUTER JOIN `store_tags` ON `stores`.`id` = `store_tags`.`store_id` LEFT OUTER JOIN `tags` ON `tags`.`id` = `store_tags`.`tag_id` LEFT OUTER JOIN `store_foods` ON `stores`.`id` = `store_foods`.`store_id` LEFT OUTER JOIN `foods` ON `foods`.`id` = `store_foods`.`food_id` WHERE (`stores`.`id` >= $start AND `stores`.`id` <= $end AND `stores`.`id` <= (SELECT max_id FROM sph_store_counter WHERE id = 1)) GROUP BY `stores`.`id` ORDER BY NULL
  sql_query_range = SELECT IFNULL(MIN(`id`), 1), IFNULL(MAX(`id`), 1) FROM `stores` 
  sql_attr_uint = sphinx_internal_id
  sql_attr_uint = class_crc
  sql_attr_uint = sphinx_deleted
  sql_attr_uint = like_count
  sql_attr_uint = sequence
  sql_query_info = SELECT * FROM `stores` WHERE `id` = (($id - 1) / 2)
}

